                     (self.lora_sdr_hier_rx_0_1_0_0_0_0, 0))
        self.connect((self.lora_sdr_hier_tx_0, 0), (self.blocks_delay_0, 0))

    def get_bw(self):
        return self.bw

    def set_bw(self, bw):
        with self._lock:
            self.bw = bw
            self.set_samp_rate(self.bw)

    def get_sf6(self):
        return self.sf6

    def set_sf6(self, sf6):
        with self._lock:
            self.sf6 = sf6

    def get_sf5(self):
        return self.sf5

    def set_sf5(self, sf5):
