{% from "common/Button.html.jinja" import Button -%}

{% extends "layouts/auth.html.jinja" %}

{% block title %}Sign in{% endblock %}

{% block body %}
<form method="post" action="" class="w-full p-12 bg-white border border-gray-300 shadow-xl rounded-xl" id="signInForm" novalidate>
	<input type="hidden" name="_csrf_token" value="{{ req.csrf_token }}">

	<div class="mb-8 text-center">
		<h2 class="mt-6 text-3xl font-bold text-gray-900">
			Sign in
		</h2>
	</div>

	{%- if form.login.error or form.password.error %}
	<div class="mt-2 mb-3 text-sm font-bold text-center text-red-500">{{ form.login.error or form.password.error }}</div>
	{%- endif %}

	<div class="mb-1">
		{{ form.login.as_input(
			aria_label="Email",
			classes="form-input w-full lowercase text-lg py-3 rounded-none rounded-t-md",
			error="",
			placeholder="Email",
			tabindex="1"
		) }}
		{#-{ form.login.render_error(classes="text-red-500 text-sm font-bold mb-3 mt-2") }#}
	</div>

	<div>
		{{ form.password.as_input(
			aria_label="Password",
			classes="form-input w-full text-lg py-3 rounded-none rounded-b-md",
			error="",
			placeholder="Password",
			tabindex="2"
		) }}
		{#-{ form.password.render_error(classes="text-red-500 text-sm font-bold mb-3 mt-2") }#}
	</div>

	<div class="mt-8">
		{{ Button("Sign in", class="w-full", attrs='tabindex="3"', type="submit") }}
	</div>

</form>
<div class="mt-10 text-center">
	<a class="link"
		href="{{ url_for('Auth.reset') }}"
		tabindex="4"
	>
		Forgot your password?
	</a>
</div>
{% endblock %}
